<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/appearanceImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="25dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/unknown"
        android:scaleX="1.4"
        android:scaleY="1.4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/nameText"
        android:layout_alignTop="@+id/appearanceImg"
        android:layout_toEndOf="@+id/appearanceImg"
        android:layout_toRightOf="@+id/appearanceImg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lv."
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/appearanceImg"
        android:layout_alignStart="@+id/nameText"
        android:layout_alignLeft="@+id/nameText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1"
        android:id="@+id/levelText"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="5dp" />

    <ProgressBar
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hpBar"
        android:layout_alignTop="@+id/nameText"
        android:layout_toEndOf="@+id/nameText"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/nameText"
        android:minWidth="120dp"
        android:progress="50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="170"
        android:id="@+id/currentHP"
        android:layout_alignTop="@+id/levelText"
        android:layout_alignStart="@+id/hpBar"
        android:layout_alignLeft="@+id/hpBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/currentHP"
        android:layout_toEndOf="@+id/currentHP"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/currentHP"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="340"
        android:id="@+id/maxHP"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2" />
</RelativeLayout>